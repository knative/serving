k8s_objects(
    name = "everything",
    objects = [
        ":elafros",
        ":elafros-efficiency",
        "//third_party/config/monitoring/istio:everything",
        "//third_party/config/monitoring/prometheus-operator/dashboards:everything",
    ],
    visibility = ["//visibility:public"],
)
