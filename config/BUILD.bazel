k8s_objects(
    name = "authz",
    objects = [
        ":serviceaccount",
        ":clusterrolebinding",
    ],
)

k8s_objects(
    name = "crds",
    objects = [
        ":route",
        ":configuration",
        ":revision",
        ":service",
    ],
)

k8s_objects(
    name = "everything",
    objects = [
        ":namespace",
        ":authz",
        ":crds",
        ":config-domain",
        ":config-autoscaler",
        ":config-logging",
        ":config-observability",
        ":controller",
        ":controllerservice",
        ":webhook",
        ":elawebhookservice",
